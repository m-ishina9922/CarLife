<!DOCTYPE html>
<html>
  <head>
    <title>CarLife.</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/873b907858.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg p-1 navbar-dark bg-dark">
      <div class="container">
        <div class="p-3 text-white "><a class="navbar-brand" href="/">CarLife.</a></div>


        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon" style="color: white;"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">

             <% if user_signed_in? %>

             <li class="nav-item">
               <%= link_to posts_path do %>
               <i class="fa-solid fa-house"></i>
               <% end %>
             </li>

             <li class="nav-item">
               <%= link_to destroy_user_session_path, method: :delete do %>
               <i class="fa-solid fa-right-from-bracket"></i>
               <% end %>
             </li>

             <li class="nav-item">
              <%= link_to image_tag(current_user.get_profile_image), user_path(current_user.id) %>
             </li>

              <li class="nav-item">
              <%= link_to "投稿する", new_post_path %>
             </li>

             <% else %>

             <li class="nav-item">
               <%= link_to about_path do %>
                <i class="fa-solid fa-link"></i>
                <% end %>
             </li>

             <li class="nav-item">
               <%= link_to "新規登録", new_user_registration_path %>
             </li>

             <li class="nav-item">
               <%= link_to new_user_session_path do %>
               <i class="fa-solid fa-right-to-bracket"></i>
               <% end %>
             </li>

             <% end %>

          </ul>
        </div>
      </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
