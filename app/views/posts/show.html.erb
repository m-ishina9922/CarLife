             <% end %>
             <a><%= @post.processimages.first.text10 %></a>
           <% end %>
         </p>


        <h4>参考にしたサイトURL</h4>
         <p>
           <%= @post.reference_site %>
         </p>

        <h4>使用した商品</h4>
         <p>
           <%= @post.products_used %>
         </p>

        <% if current_user.id == @post.user.id %>
         <%= link_to "削除", post_path(@post.id), method: :delete %> -
         <%= link_to "編集", edit_post_path(@post.id) %>
        <% else %>
         <%= link_to "この投稿者の愛車自慢を見る", user_path(@post.user) %>
        <% end %>

        <div class="favorite">
         <% if @post.favorited_by?(current_user) %>
          <p><%= link_to post_favorite_path(@post), method: :delete do %></p>
              ❤<%= @post.favorites.count %>いいね
             <% end %>

         <% else %>

          <p><%= link_to post_favorite_path(@post), method: :post do %></p>
              ♡<%= @post.favorites.count %>いいね
             <% end %>
         <% end %>
        </div>

        <div class="comment">
         <div class="comment_views">
           <p>コメント件数:<%= @post.post_comments.count %></p>
           <% @post.post_comments.each do |post_comment| %>
            <%= image_tag post_comment.user.get_profile_image, class: "rounded-circle img-fluid", size: "50x50" %>
            <%= link_to post_comment.user.name %>
            <%= post_comment.comment %></br>
           <% end %>
         </div>

         <div class="comment_form">
          <%= form_with model: [@post, @post_comment] do |f| %>
           <%= f.text_field :comment, rows: '5', placeholder: "コメントする" %>
           <%= f.submit "送信" %>
          <% end %>
         </div>
        </div>

       </div><!--メインコンテンツcol-xl-8-->


   </div><!--row-->
</div><!--container-->

