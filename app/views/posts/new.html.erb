<h1>投稿画面</h1>
<% if @post.errors.any? %>
 <%= @post.errors.count %> 件のエラーが発生しました
 <ul>
   <% @post.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model: @post do |f| %>

<h4>作業タイトル</h4>
<%= f.text_field :title %>

<h4>作業工程</h4>

<h4>参考にしたサイトURL</h4>
<%= f.text_field :reference_site %>

<h4>使用した商品</h4>
<%= f.text_field :products_used %>

<%= f.submit '投稿' %>

<% end %>