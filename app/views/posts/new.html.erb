<div class="container-breakpoint">
  <div class="row">


    <div class="col-md-6 mx-auto">
    <div class="w-100"><%= flash[:notice] %></div>
    <ul>
     <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
    </ul>

       <!-- formオブジェクトのインスタンス(@post)を指定する　-->
       <%= form_with(model: @post, local: true)  do |f| %>

         <%= f.label :title, '作業タイトル', class: "pt-3" %><br/>
           <%= f.text_field :title, class: "w-100" %><br/>

         <%= f.label :reference_site, '参照サイトURL', class: "pt-3"  %><br/>
           <%= f.text_field :reference_site,  class: "w-100" %><br/>
           <p class="text-right my-1">※特にない場合は「なし」と入力</p>

         <%= f.label :products_used, '使用した商品' %><br/>
           <%= f.text_field :products_used, class: "w-100" %><br/>
           <p class="text-right my-1">※特にない場合は「なし」と入力</p>

　　　　 <h5>作業</h5>

         <%= f.fields_for :processimages do |ff| %>
           <%= ff.text_area :text,  class: "w-100"  %><br>
           <%= ff.file_field :image %><br><br>
         <% end %>


           <%= f.text_area :tags_string, placeholder: "タグを入力", class: "mt-3" %><br/>
        <p>スペースで区切って複数のタグをつけることができます</p>

         <%= f.submit '投稿する' , class: 'nav-link text-white btn btn-secondary' %>

        <% end %>


     </div><!--col-md-10-->
   </div><!--row-->
 </div><!--container-->


