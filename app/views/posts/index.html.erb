<div class="card-list-container-breakpoint">
   <div class="row">
      <div class="col-xl-2" style="background-color: gray;">
        <%= render 'users/sidebar', user: @user, tags: @tags %><!--サイドバー-->
      </div><!--サイドパーcol-xl-4-->

      <div class="col-xl-10 d-flex">

        <% @posts.each do |post| %>
        <div class="card" style="width: 15rem; height:17rem;">
           <% if post.image1.attached? %>
             <%= image_tag url_for(post.image1.variant(resize_and_pad: [200, 130])), class: "card-img-top " %>
           <% else %>
             <%= image_tag 'no_image', size: "200x200" %>
           <% end %>

          <div class="card-body">
            <div class="row">
              <div class="col-3">
                <%= image_tag post.user.get_profile_image, class: "mt-3 rounded-circle" %>
              </div><!--col-2-->

              <div class="col-9 ">
                <p class="card-title">
                  <%= link_to post.title, post_path(post.id) %></br>
                  <%= link_to post.user.name, user_path(post.user)  %>
                </p>
              </div><!--col-10-->
            </div><!--row-->
          </div><!--card-body-->

        </div><!--class="card" style="width: 15rem; height:17rem;-->
        <% end %>
       </div><!--メインコンテンツcol-xl-10-->


   </div><!--row-->
</div><!--container-->